<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.elcazadordebaterias.coordinapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CoordinApp">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.CoordinApp.NoActionBar"></activity>
        <activity
            android:name=".activities.LoginActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Coordinapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RegisterActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Coordinapp.NoActionBar" />
        <activity
            android:name=".activities.MainActivity_Student"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Coordinapp.NoActionBar" />
        <activity
            android:name=".activities.MainActivity_Teacher"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Coordinapp.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>