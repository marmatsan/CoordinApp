<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- All related to BottomNavigationView -->
    <style name="BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigationView.Active</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigationView.Inactive</item>
    </style>

    <style name="TextAppearance"/>
    <style name="TextAppearance.BottomNavigationView"/>

    <style name="TextAppearance.BottomNavigationView.Inactive">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.BottomNavigationView.Active">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Button Theme Style -->
    <style name="ShapeAppearanceOverlay.CoordinApp.Button.RoundedButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Custom toolbar -->
    <style name="Theme.Coordinapp.NoActionBar" parent="@style/Theme.CoordinApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundedImage">
        <item name="cornerSize">50%</item>
    </style>

    <!-- Rounded cardviews (for message cards)-->
    <style name="MessageCardRight" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/SharpTopRightCorner</item>
    </style>

    <style name="SharpTopRightCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

    <style name="MessageCardLeft" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/SharpTopLeftCorner</item>
    </style>

    <style name="SharpTopLeftCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
    </style>

</resources>